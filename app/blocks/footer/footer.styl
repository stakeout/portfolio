.page-footer
	background-color #555b5e
	&__top-row,
	&__bottom-row
		display -webkit-flex
		display -ms-flex
		display flex
		justify-content space-between
		align-items center
		max-width rem($page-width)
		min-height 72px
		padding-left 30px
		padding-right 30px
		margin 0 auto
		@media mqTablet
			display block
			padding-bottom 15px
	&__top-row
		border-bottom 1px solid #646a6d
		@media mqTablet
			margin-top 30px
		svg
			fill #f9f9f9
			opacity .5
	&__bottom-row
		@media mqTablet
			padding-top 20px
			text-align center
	&__text
		opacity 0.5
		color $c_white
		font-family $base-font
		font-size 1rem
		font-weight 300
		line-height 1.5rem
		@media mqTablet
			margin-bottom 10px
	.icon_vk
		width 23px
		height 13px
	.icon_github
		width 20px
		height 16px
	.icon_in
		width 20px
		height 16px
