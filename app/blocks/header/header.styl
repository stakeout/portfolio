.page-header
	position relative
	max-width rem(1200px)
	min-height rem(620px)
	margin 0 auto
	background url(../images/header-bg-1200.jpg)
	background-repeat no-repeat
	background-size cover
	&_blog
		margin-bottom 70px
	&__inner
		&_blog
			min-height 400px
		// &:after
		// 	position absolute
		// 	bottom 0
		// 	left 0
		// 	content ''
		// 	width 100%
		// 	height 122px
		// 	background url(../images/header-bg-bottom.png)
		// 	background-size 100% auto
	&__top-row
		display -webkit-flex
		display -ms-flex
		display flex
		justify-content space-between
		margin-bottom 90px
		&_blog,
		&_about,
		&_works
			padding-left 30px
			padding-right 30px
		&_works
			margin-bottom 88px
		svg
			fill $c_white
			opacity .5
			&:hover
				fill $c_white
				opacity 1
	&__nav-toggler
		margin-top 28px
		svg
			fill $c_white
		&_blog
			margin-top 25px
	&__bottom-row
		text-align center
	&__page-title
		color $c_white
		font-family $base-font
		font-size 2.188rem
		font-weight 500
		// line-height 3.5rem
	&__page-description
		color $c_white
		font-family $base-font
		font-size 1rem
		font-weight 400
		line-height 1.5rem
