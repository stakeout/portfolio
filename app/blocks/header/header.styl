.page-header
	&_blog
		margin-bottom 70px
	&__inner
		position relative
		min-height 620px
		background url(../images/header-bg-1200.jpg)
		background-repeat no-repeat
		background-size cover
		&_blog
			min-height 400px
		&:after
			position absolute
			bottom 0
			left 0
			content ''
			width 100%
			height 110px
			background url(../images/header-bg-bottom.png)
			background-size 100% auto
	&__top-row
		display -webkit-flex
		display -ms-flex
		display flex
		justify-content space-between
		margin-bottom 90px
		&_blog,
		&_about
			margin-bottom 16px
			padding-left 20px
			padding-right 20px
		svg
			fill $c_white
			opacity .5
			&:hover
				fill $c_white
				opacity 1
	&__nav-toggler
		margin-top 39px
		svg
			fill $c_white
		&_blog
			margin-top 25px
	&__bottom-row
		text-align center
	&__page-title
		color $c_white
		font-family $h-font
		font-size 3.938rem
		font-weight 400
		line-height 3.5rem
		text-transform uppercase
	&__page-description
		color $c_white
		font-family $base-font
		font-size 1rem
		font-weight 400
		line-height 1.5rem
