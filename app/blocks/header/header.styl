.page-header
	position relative
	max-width rem(1800px)
	width 100%
	margin 0 auto
	background url(../images/bg-1800.jpg)
	background-repeat no-repeat
	background-size cover
	&_about
		min-height rem(600px)
		&:after
			position absolute
			content ''
			bottom 0
			right 0
			height 152px
			width 50%
			background url(../images/about_bg_right.svg) no-repeat
		&:before
			position absolute
			content ''
			bottom 0
			left 0
			right 0
			height 152px
			width 50%
			background url(../images/about_bg_left.svg) no-repeat
	&_works
		min-height rem(600px)
		&:after
			position absolute
			content ''
			bottom 0
			left 0
			height 155px
			width 100%
			background url(../images/bg.svg) no-repeat
	&_blog
		&:before
			position absolute
			content ''
			max-width rem(303px)
			height 208px
			left calc(50% - 150px)
			bottom 0
			background url(../images/blog_header.svg) no-repeat
			opacity .07
	&__inner
		&_works,
		&_about
			&:before
				position absolute
				width 65.277%
				min-height 314px
				top calc(50% - 157px)
				left calc(50% - 32.638%)
				content ''
				background url(../images/portfolio_header.svg) no-repeat
				opacity .1
		&_blog
			position relative
			min-height 396px
			&:before,
			&:after
				position absolute
				content ''
				bottom 0
			&:after
				right 0
				width: 0;
				height: 0;
				border-style: solid;
				border-width: 0 0 152px 888px;
				border-color: transparent transparent $c_white transparent;
			&:before
				left 0
				width: 0;
				height: 0;
				border-style: solid;
				border-width: 152px 0 0 888px;
				border-color: transparent transparent transparent $c_white;

	&__top-row
		display -webkit-flex
		display -ms-flex
		display flex
		justify-content space-between
		&_blog,
		&_about,
		&_works
			padding-left 30px
			padding-right 30px
		&_works,
		&_about
			margin-bottom 75px
		&_blog
			margin-bottom 18px
		svg
			fill $c_white
			opacity .5
			&:hover
				fill $c_white
				opacity 1
	&__nav-toggler
		margin-top 28px
		svg
			fill $c_white
		&_blog
			margin-top 25px
	&__bottom-row
		position relative
		text-align center
		z-index 5
	&__page-title
		color $c_white
		font-family $base-font
		font-size 2.188rem
		font-weight 500
		// line-height 3.5rem
		&_blog
			color $c_white
			font-family $h-font
			font-size 3.938rem
			font-weight 400
			line-height 3.5rem
	&__page-description
		margin-bottom 130px
		color $c_white
		font-family $base-font
		font-size 1rem
		font-weight 400
		line-height 1.5rem
		opacity .8
		@media (max-width: 1180px)
			margin-bottom 70px

		&_blog
			margin-bottom 0
	&__arrow
		display inline-block
		vertical-align top
		cursor pointer
		opacity .7
		svg
			fill $c_white
		&:hover
			opacity 1
