.works
	position relative
	width 100%
	&:before
		position absolute
		top 0
		left calc(50% - 252px)
		content ''
		width 505px
		height 165px
		background url(../images/works_header.svg) no-repeat
		background-size 100% 100%
		opacity .07
		z-index 1
		@media mqTablet
			width 404px
			height 132px
			left calc(50% - 202px)
		@media mqSmartphone
			width 253px
			height 83px
			left calc(50% - 125px)
	&__inner
		position relative
		max-width rem($page-width)
		padding-left 10px
		padding-right 10px
		padding-top 65px
		background-color #faf8f0
		text-align center
		@media mqSmartphone
			padding-top 25px
	&__title
		margin-bottom 70px
		color $c_grey-hover
		font-family $h-font
		font-size 3.938rem
		font-weight 400
		line-height 3.5rem
		text-align center
		@media mqTablet
			font-size 3.063rem
			line-height 3rem
		@media mqSmartphone
			font-size 2.188rem
			line-height 2.625rem
	&__works-wrapper
		margin-right -10px
		margin-left -10px
		min-height rem(745px)
		background-color #efebe0
		clearfix()
		@media mqTablet
			display -webkit-flex
			display -ms-flex
			display flex
			flex-direction column
			min-height rem(1015px)
	&__controls
		float right
		width 50%
		min-height rem(230px)
		@media mqTablet
			float none
			order 3
			min-height rem(215px)
	&__presentation
		float right
		min-height rem(515px)
		width 50%
		@media mqTablet
			float none
			width 100%
			min-height rem(530px)
