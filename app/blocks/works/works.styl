.works
	position relative
	width 100%
	&:before
		position absolute
		top 0
		left calc(50% - 252px)
		content ''
		width 505px
		height 165px
		background url(../images/works_header.svg) no-repeat
		background-size 100% 100%
		opacity .07
		z-index 1
		@media mqTablet
			width 404px
			height 132px
			left calc(50% - 202px)
		@media mqSmartphone
			width 253px
			height 83px
			left calc(50% - 125px)
	&__inner
		position relative
		max-width rem($page-width)
		padding-left 10px
		padding-right 10px
		padding-top 65px
		background-color #faf8f0
		text-align center
		@media mqSmartphone
			padding-top 25px
	&__title
		margin-bottom 70px
		color $c_grey-hover
		font-family $h-font
		font-size 3.938rem
		font-weight 400
		line-height 3.5rem
		text-align center
		@media mqTablet
			font-size 3.063rem
			line-height 3rem
		@media mqSmartphone
			font-size 2.188rem
			line-height 2.625rem
	&__works-wrapper
		margin-right -10px
		margin-left -10px
		min-height rem(745px)
		background-color #efebe0
		clearfix()
		@media mqTablet
			display -webkit-flex
			display -ms-flex
			display flex
			flex-direction column
			min-height rem(1015px)
	&__presentation
		float right
		min-height rem(515px)
		width 50%
		@media mqTablet
			float none
			width 100%
			min-height rem(530px)
.controls
	float right
	width 50%
	min-height rem(230px)
	@media mqTablet
		float none
		width 100%
		order 3
		min-height rem(215px)
	&__wrapper
		display -webkit-flex
		display -ms-flex
		display flex
		min-height inherit
	&__display
		position relative
		height inherit
		width 100%
		overflow hidden
		cursor pointer
		outline 1px solid
	&__list
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		background-color rgba(136, 131, 114, 0.5)
		&:before
			position absolute
			display inline-block
			content: ''
			top calc(50% - 15px)
			left calc(50% - 15px)
			transform translate(-50%, -50%)
			transform rotate(-45deg)
			width 30px
			height 30px
			background-color transparent
			border-left 10px solid #fff
			border-bottom 10px solid #fff
			opacity 1
		&_right
			li
				top 100%
			&:before
				transform rotate(135deg)
	&__item
		position absolute
		top -100%
		left 0
		width 100%
		height 100%
		&.active
			top 0%
		img
			display block
			position absolute
			max-width 100%
			max-height 100%
			top 0
			right 0
			bottom 0
			left 0
			margin auto
