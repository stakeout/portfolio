.blog-navigation
	display -webkit-flex
	display -ms-flex
	display flex
	justify-content flex-end
	max-width rem(410px)
	width 100%
	margin-right 5.555%
	padding-right 20px
	padding-top 65px
	text-align right
	@media mqTablet
		display none
	&__list
		max-width rem(270px)
	&__item
		margin-bottom 27px
	&__link
		min-height 42px
		padding-right 17px
		color $c_grey
		font-family $base-font
		font-size 1rem
		font-weight 400
		line-height 1.625rem
		&_active
			color $c_green
			font-weight 700
			border-right 3px solid $c_green
