.contacts
	width rem(380px)
	height rem(290px)
	margin auto
	padding-top 35px
	padding-left 40px
	opacity 0.85
	background-color #fcfcfc
	border-radius 5px
	&__title
		margin-bottom 25px
		color $c_grey-hover
		font-family $h-font
		font-size 2.188rem
		font-weight 400
		line-height 2.563rem
		text-align center
	&__item
		margin-bottom 27px
	&__link
		position relative
		padding-left 35px
		opacity 0.8
		color $c_grey
		font-family $base-font
		font-size 1rem
		font-weight 500
		line-height 1rem
		&:hover
			text-decoration underline
			opacity 1
	.icon
		position absolute
		top 0
		left 0
		fill $c_green
