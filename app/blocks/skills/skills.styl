.skills
	display -webkit-flex
	display -ms-flex
	display flex
	flex-direction column
	align-items center
	max-width 50%
	width 100%
	padding-top 12px
	background-color #eeebdf
	&__title
		max-width rem(330px)
		margin-bottom 27px
		color $c_grey
		font-family $h-font
		font-size 2.188rem
		font-weight 400
		line-height 2.563rem
	&__inner
		padding-left 40px
		padding-right 10px
	&__description-text
		margin-bottom 48px
		color $c_grey
		font-family $base-font
		font-size 1rem
		font-weight 400
		line-height 1.5rem
	&__skill-title
		margin-bottom 14px
		color $c_grey
		font-family $base-font
		font-size 1.75rem
		font-weight 500
		line-height 2rem
	&__skill-section
		margin-bottom 40px
	&__list
		display -webkit-flex
		display -ms-flex
		display flex
	&__item
		margin-right 37px
		border-radius 50%
		overflow hidden
		&:last-child
			margin-right 0
