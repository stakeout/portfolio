.skills
	max-width rem(580px)
	padding-left 20px
	&__title
		margin-bottom 40px
		color $c_grey
		font-family $h-font
		font-size 2.188rem
		font-weight 400
		line-height 2.563rem
		text-align center
	&__description-text
		color $c_grey
		font-family $base-font
		font-size 1rem
		font-weight 400
		line-height 1.5rem
	&__skill-title
		margin-bottom 20px
		color $c_grey
		font-family $base-font
		font-size 1.75rem
		font-weight 500
		line-height 2rem
	&__skill-section
		padding-top 5px
		padding-bottom 5px
	&__list
		display -webkit-flex
		display -ms-flex
		display flex
	&__item
		margin-right 37px
		border-radius 50%
		overflow hidden
		&:last-child
			margin-right 0
