.skills
	position relative
	max-width 50%
	background-color #eeebdf
	&:before
		position absolute
		content ''
		top -125px
		right 0
		width: 0;
		height: 0;
		border-style: solid;
		border-width: 0 0 125px 700px;
		border-color: transparent transparent #eeebdf transparent;
	&__title
		margin-bottom 27px
		margin-top -8px
		color $c_grey
		font-family $h-font
		font-size 2.188rem
		font-weight 400
		line-height 2.563rem
		text-align center
	&__inner
		padding-left 40px
		padding-right 10px
	&__description-text
		margin-bottom 48px
		color $c_grey
		font-family $base-font
		font-size 1rem
		font-weight 400
		line-height 1.5rem
	&__skill-title
		margin-bottom 14px
		color $c_grey
		font-family $base-font
		font-size 1.75rem
		font-weight 500
		line-height 2rem
	&__skill-section
		margin-bottom 29px
	&__list
		display -webkit-flex
		display -ms-flex
		display flex
	&__item
		margin-right 37px
		border-radius 50%
		overflow hidden
		&:last-child
			margin-right 0
