.feedback-form
	max-width rem(380px)
	min-height rem(438px)
	margin 0 auto
	padding-top 42px
	padding-left 20px
	padding-right 20px
	background #fcfcfc url(../images/form-bg2-blur.png)
	background-size cover
	background-position 100% 100%
	border-radius 5px
	&__form
		filter blur(0px)
	&__title
		margin-bottom 32px
		color $c_grey
		font-family $h-font
		font-size 2.188rem
		font-weight 400
		line-height 2.563rem
		text-align center
		@media mqTablet
			font-size 1.875rem
			line-height 2.563rem
		@media mqSmartphone
			font-size 1.313rem
			line-height 1.75rem
	&__input-field
		width 100%
		margin-bottom 20px
		padding-left 20px
		background-color $c_white
		border-radius 5px
		border none
		&_name,
		&_mail
			height rem(45px)
			line-height rem(45px)
		&_message
			padding-top 16px
			height 140px
			resize none
	&__controls
		display -webkit-flex
		display -ms-flex
		display flex
		margin-right -20px
		margin-left -20px
	&__button
		min-height 45px
		width 50%
		color $c_white
		font-family $base-font
		font-size 1rem
		font-weight 500
		line-height 45px
		border none
		background-color $c_green
		@media mqSmartphone
			min-height 46px
			font-size 0.875rem
			line-height 2.25rem
		&:hover
			background-color $c_green-hover
		&_submit
			border-right 2px solid rgba(222,227,231,.5)
			border-radius 0 0 0 5px
		&_reset
			border-radius 0 0 5px 0
