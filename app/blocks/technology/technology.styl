.technology
	float left
	width 50%
	min-height inherit
	padding-top 240px
	background-color #f0efe9
	@media mqTablet
		float none
		width 100%
		min-height rem(270px)
		padding-top 45px
		padding-bottom 60px
		order 2
	@media mqSmartphone
		min-height rem(220px)
		padding-top 30px
		padding-bottom 30px
	&__list
		position relative
		display -webkit-flex
		display -ms-flex
		display flex
		justify-content: center;
		min-width rem(420px)
		margin-bottom 40px
		margin-top -10px
		padding-top 18px
		padding-bottom 18px
		color $c_green
		font-family $base-font
		font-size 1rem
		font-weight 500
		text-transform uppercase
		@media mqSmartphone
			min-width 100%
			padding-top 0
			padding-bottom 0
			min-height 30px
			margin-bottom 20px
			line-height 30px
			font-size 0.875rem
		&:before,
		&:after
			position absolute
			content ''
			width 420px
			height 2px
			opacity 0.3
			background-color #009688
			@media mqSmartphone
				width 100%
		&:before
			top 0
		&:after
			bottom 0
	h3
		max-width 350px
		margin-bottom 35px
		color $c_grey
		font-family $h-font
		font-size 2.188rem
		font-weight 400
		line-height 2.563rem
		text-align center
		@media mqTablet
			font-size 1.875rem
			line-height 2.25rem
		@media mqSmartphone
			font-size 1.313rem
			line-height 1.75rem
	&__go-to-site
		width 200px
		min-height 45px
		color $c_white
		font-family $base-font
		font-size 1rem
		font-weight 500
		line-height 45px
		text-align center
		background-color $c_green
		border-radius 5px
		@media mqSmartphone
			min-height 40px
			font-size 0.875rem
		&:hover
			background-color $c_green-hover
