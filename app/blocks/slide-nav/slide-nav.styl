.slide-nav
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100vh
  opacity: 1
  visibility: hidden
  transition: opacity .35s, visibility .35s, width .35s
  z-index: 50
  &:before
    content: ''
    background: #20b5a1
    left: -55%
    top: 0
    width: 50%
    height: 100%
    position: absolute
    transition: left .35s ease
  &:after
    content: ''
    background: #20b5a1
    right: -55%
    top: 0
    width: 50%
    height: 100%
    position: absolute
    transition: all .35s ease
  &.open
    opacity: .9
    visibility: visible
    height: 100%
    &:before
      left: 0
    &:after
      right: 0
    li
      animation: fadeInRight .5s ease forwards
      animation-delay: .15s
      &:nth-of-type(2)
        animation-delay: .35s
      &:nth-of-type(3)
        animation-delay: .55s
      &:nth-of-type(4)
        animation-delay: .75s
  nav
    position: relative
    height: 70%
    top: 60%
    transform: translateY(-50%)
    font-size: 50px
    font-family: $h-font
    font-weight: 400
    text-align: center
    z-index: 100
		@media mqSmartphone
			font-size 24px
			color red
  &__fullscreen-menu
    list-style: none
    padding: 0
    margin: 0 auto
    display: inline-block
    position: relative
    height: 100%
  &__item
    height: 20%
    height: calc(100% / 5)
    min-height: 50px
    position: relative
    opacity: 0
  &__link
    display: block
    position: relative
    color: $c_white
    text-decoration: none
    overflow: hidden
    &:hover:after,
     &:focus:after,
     &:active:after
      width: 50%
    &:after
      content: ''
      position: absolute
      bottom: 0
      left: 50%
      width: 0%
      transform: translateX(-50%)
      height: 3px
      background: $c_white
      transition: .35s
@keyframes fadeInRight
  0%
    opacity: 0
    left: 20%
  100%
    opacity: 1
    left: 0
