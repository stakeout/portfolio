.blog-content
	max-width 55%
	padding-top 65px
	@media mqTablet
		max-width: initial
		padding-left 24px
		padding-right 24px
		padding-top 55px

	&__article
		position relative
		padding-bottom 70px
		margin-bottom 63px
		@media mqTablet
			padding-bottom 50px
			margin-bottom 48px
		&:after
			position absolute
			left 0
			bottom 0
			content ''
			width 42.563rem
			height 0.313rem
			opacity 0.07
			background-color $c_grey-hover
	&__post-title
		// margin-bottom 30px
		color $c_grey
		font-family $h-font
		font-size 2.188rem
		font-weight 400
		line-height 2.563rem
		text-transform uppercase
		@media mqTablet
			font-size 1.875rem
			line-height 2.25rem
	&__post-date
		margin-bottom 27px
		opacity 0.7
		color $c_green
		font-family $base-font
		font-size 1rem
		font-weight 400
		line-height 2.563rem
		@media mqTablet
			font-size 0.875rem
			line-height 1.5rem
	p
		max-width rem(900px)
		padding-right 10px
		color $c_grey
		font-family $base-font
		font-size 1rem
		font-weight 400
		line-height 1.625rem
		margin-bottom 5px
		@media mqTablet
			font-size 0.875rem
			line-height 1.313rem
