.about-me
	position relative
	clearfix()
	max-width 50%
	min-height 855px
	background #efeee9
	&:before
		position absolute
		content ''
		left 50px
		top -25px
		width 357px
		height 125px
		background url(../images/about_header.svg) no-repeat 10%
		background-size cover
		opacity .06
		z-index 1
	&__title
		float left
		min-width 200px
		margin-bottom 60px
		padding-top 20px
		margin-left 100px
		color $c_grey-hover
		font-family $h-font
		font-size 3.938rem
		font-weight 400
		line-height 3.125rem
		text-align center
	&__inner
		float right
		max-width 53%
		padding-top 20px
		text-align center
	&__img-wrapper
		margin-bottom 30px
		padding-left 20px
	&__title-description
		margin-bottom 26px
		color $c_grey
		font-family $h-font
		font-size 2.188rem
		font-weight 400
		line-height 2.563rem
	&__description-text
		margin-bottom 11px
		padding-left 20px
		color $c_grey
		font-family $base-font
		font-size 1rem
		font-weight 400
		line-height 1.5rem
		text-align left
