.about-me
	position relative
	max-width 50%
	padding-left 70px
	padding-right 70px
	margin-left -10
	background #efeee9
	&:before
		position absolute
		content ''
		top -152px
		left 0
		width: 0;
		height: 0;
		border-style: solid;
		border-width: 152px 0 0 605px;
		border-color: transparent transparent transparent #efeee9;
	&__title
		margin-bottom 60px
		color $c_grey-hover
		font-family $h-font
		font-size 3.938rem
		font-weight 400
		line-height 4.125rem
		text-align center
	&__title-description
		display block
		margin-top 40px
		margin-bottom 35px
		color $c_grey
		font-family $h-font
		font-size 2.188rem
		font-weight 400
		line-height 2.563rem
		text-align center
	&__description-text
		margin-bottom 20px
		color $c_grey
		font-family $base-font
		font-size 1rem
		font-weight 400
		line-height 1.5rem
