.socials
	display -webkit-flex
	display -ms-flex
	display flex
	justify-content center
	&_header
		margin-top 28px
	&_intro
		margin-bottom 40px
	&__list
		display -webkit-flex
		display -ms-flex
		display flex
		margin 0 auto
	&__link
		display -webkit-flex
		display -ms-flex
		display flex
		font-size 0
	&__item
		margin-right 28px
		&:last-child
			margin-right 0
		&_footer
			display -webkit-flex
			display -ms-flex
			display flex
			justify-content center
			width rem(48px)
			height rem(48px)
			border-radius 50%
			border 0.031rem solid #f9f9f9
			opacity .5
			text-align center
			&:hover
				background-color $c_white
				opacity 1
			.link
				margin auto
	&__icon
		margin auto
		fill $c_green
		&:hover
			fill $c_green-hover
