.preloader
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	z-index 9999
	background-color #20b5a1
	&__spinner
		position absolute
		width 100px
		height 100px
		top 50%
		left 50%
		transform translate(-50%, -50%)
	&__animation
		position relative
		width 100px
		height 100px
		border 3px solid transparent
		border-top-color $c_white
		border-radius 50%
		animation spin 2s linear infinite
		&:before,
		&:after
			position absolute
			content ''
			border 3px solid transparent
			border-top-color $c_white
			border-radius 50%
		&:before
			top 5px
			bottom 5px
			left 5px
			right 5px
			animation spin 1.5s linear infinite
		&:after
			top 15px
			bottom 15px
			left 15px
			right 15px
			animation spin 3s linear infinite
	&__percents
		position absolute
		top 50%
		left 50%
		color $c_white
		transform translate(-50%, -50%)
@keyframes spin
	0%
		-webkit-transform: rotate(0deg)
		transform: rotate(0deg)
	100%
		-webkit-transform: rotate(360deg)
		transform: rotate(360deg)
